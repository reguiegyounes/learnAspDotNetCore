<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="d:\work\log.txt">

  <variable name="defaultLayout" value="${longdate}|${level}|${message:withException=true}" />
  <!-- the traget to write to-->
  <targets>
    <!-- write logs to file -->
    <target name="allfile" xsi:type="File" fileName="G:\logsApp\nlog-all-${shortdate}.log"/>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- All logs, including from Microsoft -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />
  </rules>
</nlog>