@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager

@{ string fullName = null;
    if(signInManager.IsSignedIn(User)){
        AppUser user =await userManager.FindByEmailAsync(User.Identity.Name);
        if (user!=null)
        {
            fullName = (user.FirstName??string.Empty).ToUpper() + " " + (user.LastName??string.Empty).ToLower();
        }
    }
}

<DOCTYPE html>
<html>
     <head>
        <title>@ViewBag.Title | Employees Management</title>
        <environment include="Development">
            <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        </environment>
        <environment include="Production,Staging">
            <link   href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" 
                    rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" 
                    crossorigin="anonymous"
                    asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
                    asp-fallback-test-class="sr-only"
                    asp-fallback-test-property="position"
                    asp-fallback-test-value="abslute"
                    asp-suppress-fallback-integrity="true">
        </environment>
        <link rel="icon" type="image/x-icon" href="/Images/logo.png" asp-append-version="true"  />
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
          <div class="container-fluid">
            <a class="navbar-brand" href="/">
                EMPLOYEE
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" asp-action="Index" asp-controller="Employee">Employees</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" asp-action="Create" asp-controller="Employee">Create Employee</a>
                </li>
              </ul>
                 <ul class="navbar-nav d-flex">
                     @if(signInManager.IsSignedIn(User)){
                            if (fullName == null) fullName = User.Identity.Name;

                        <li class="nav-item">
                            <a class="nav-link btn" asp-action="Logout" asp-controller="Account">Logout @fullName</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link btn-link" asp-action="Login" asp-controller="Account">Login</a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link btn-link" asp-action="Register" asp-controller="Account">Register</a>
                        </li>  
                    }
                     
                </ul>
            </div>
          </div>
        </nav>
        <div class="container">
             @RenderBody()
        </div>
        
        <environment include="Development">
            <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
            <script src="~/lib/jquery/jquery.js"></script>
            <script src="~/lib/jquery-validate/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
            <script src="~/lib/jquery/jquery.min.js"></script>
            <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        </environment>
    </body>
</html>