@model List<EditUsersRoleViewModel>

@{ ViewBag.Title = "Edit Users Role";
}

<form method="post">
    <div class="my-5">
        <div class="card">
            <div class="card-header">
                <span class=display-1>Role : @ViewBag.RoleName</span><br/>
                <span>@ViewBag.IdRole</span><br/>
                Add or remove users from this role
                <hr/>
            
            </div>
            <div class="card-body">
                <h6>Users</h6>
                @for(int i=0;i< Model.Count;i++){
                    <div class="form-check">
                        <input asp-for="@Model[i].UserId" hidden>
                        <input asp-for="@Model[i].UserName" hidden>
                        <input asp-for="@Model[i].IsSelected" class="form-check-input">
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-sm btn-success">Save</button>
                <a class="btn btn-sm btn-dark" asp-action="Edit" asp-route-id="@ViewBag.IdRole">Back</a>
            </div>
            <div asp-validation-summary="All" class=text-danger></div>
        </div>
    </div>
</form>

